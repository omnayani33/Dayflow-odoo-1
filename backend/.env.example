# Django Settings - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# SECURITY WARNING: Generate a new secret key for production!
# Generate using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for production)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=dayflow_db
# DATABASE_USER=dayflow_user
# DATABASE_PASSWORD=your-db-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration (for sending emails)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-app-password
# DEFAULT_FROM_EMAIL=noreply@dayflow.com

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Media and Static Files
# MEDIA_URL=/media/
# STATIC_URL=/static/

# CORS (if using frontend on different domain)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
