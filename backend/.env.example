# Django Settings - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# SECURITY WARNING: Generate a new secret key for production!
# Generate using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for production)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=dayflow_db
# DATABASE_USER=dayflow_user
# DATABASE_PASSWORD=your-db-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration (Required for email notifications)
# For Gmail: Use App Password, not your regular password
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Twilio Configuration (Required for WhatsApp notifications)
# Sign up at: https://www.twilio.com/try-twilio
# WhatsApp Sandbox: https://console.twilio.com/us1/develop/sms/try-it-out/whatsapp-learn
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Media and Static Files
# MEDIA_URL=/media/
# STATIC_URL=/static/

# CORS (if using frontend on different domain)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
